<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Cards"
        android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="10">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
                android:layout_weight="5"
                android:id="@+id/myCard1"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
                android:layout_weight="5"
                android:id="@+id/myCard2"/>
        <Button  android:layout_width="0dp" android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:id="@+id/moveButton"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="10">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
                android:layout_weight="5"
                android:id="@+id/tableCard1"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
                android:layout_weight="5"
                android:id="@+id/tableCard2"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
                android:layout_weight="5"
                android:id="@+id/tableCard3"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
                android:layout_weight="5"
                android:id="@+id/tableCard4"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
                android:layout_weight="5"
                android:id="@+id/tableCard5"/>


    </LinearLayout>








</LinearLayout>